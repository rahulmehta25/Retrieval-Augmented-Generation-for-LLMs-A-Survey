# RAG System Environment Variables
# Copy this file to .env and customize the values for your environment

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment setting (development, testing, staging, production)
RAG_ENVIRONMENT=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Main database URL (PostgreSQL, SQLite, etc.)
RAG_DATABASE_URL=sqlite:///./rag_database.db

# Database pool settings (for production)
# RAG_DATABASE_POOL_SIZE=20
# RAG_DATABASE_MAX_OVERFLOW=10

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis configuration (for production caching)
RAG_REDIS_URL=redis://localhost:6379/0
RAG_REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT secret key (generate a strong random key for production)
RAG_JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_in_production

# Encryption keys for sensitive data
RAG_ENCRYPTION_KEY=your_encryption_key_here
RAG_KDF_SALT=your_kdf_salt_here

# SSL/TLS configuration (for production)
RAG_SSL_KEYFILE=/path/to/your/ssl/private.key
RAG_SSL_CERTFILE=/path/to/your/ssl/certificate.crt

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# OpenAI API key (if using OpenAI models)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic API key (if using Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cohere API key (if using Cohere models)
COHERE_API_KEY=your_cohere_api_key_here

# Hugging Face API key (if using Hugging Face models)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# =============================================================================
# KNOWLEDGE GRAPH CONFIGURATION (if using Neo4j)
# =============================================================================

# Neo4j database configuration
RAG_NEO4J_URL=bolt://localhost:7687
RAG_NEO4J_USER=neo4j
RAG_NEO4J_PASSWORD=your_neo4j_password_here

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================

# Webhook URL for alerts
RAG_ALERT_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email configuration for alerts
RAG_SMTP_SERVER=smtp.gmail.com
RAG_SMTP_USERNAME=your_email@gmail.com
RAG_SMTP_PASSWORD=your_app_password_here

# =============================================================================
# BACKUP AND STORAGE
# =============================================================================

# Backup storage location (S3, local path, etc.)
RAG_BACKUP_LOCATION=s3://your-backup-bucket/rag-backups

# AWS credentials (if using S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# =============================================================================
# SYSTEM OVERRIDES (Advanced Configuration)
# =============================================================================

# Override system settings via environment variables
# These follow the pattern: RAG_SECTION_SUBSECTION_KEY

# System configuration overrides
# RAG_SYSTEM_DEBUG=true
# RAG_SYSTEM_MAX_WORKERS=8

# API configuration overrides
# RAG_API_HOST=0.0.0.0
# RAG_API_PORT=8000

# Security configuration overrides
# RAG_SECURITY_INPUT_VALIDATION=true
# RAG_SECURITY_MAX_INPUT_LENGTH=2000

# Rate limiting overrides
# RAG_RATE_LIMITING_ENABLED=true
# RAG_RATE_LIMITING_REQUESTS_PER_MINUTE=120

# Cache configuration overrides
# RAG_CACHE_CACHE_BACKEND=redis
# RAG_CACHE_TTL_SECONDS=7200

# Generator configuration overrides
# RAG_GENERATOR_MODEL_NAME=llama2:7b
# RAG_GENERATOR_TEMPERATURE=0.7

# Embedder configuration overrides
# RAG_EMBEDDER_MODEL_NAME=all-MiniLM-L6-v2
# RAG_EMBEDDER_BATCH_SIZE=64

# Vector store configuration overrides
# RAG_VECTOR_STORE_TYPE=hybrid
# RAG_VECTOR_STORE_COLLECTION_NAME=rag_production

# =============================================================================
# DEVELOPMENT SPECIFIC VARIABLES
# =============================================================================

# Development mode settings
# RAG_DEVELOPMENT_HOT_RELOAD=true
# RAG_DEVELOPMENT_VERBOSE_LOGGING=true
# RAG_DEVELOPMENT_SAVE_INTERMEDIATE_RESULTS=true

# =============================================================================
# PRODUCTION SPECIFIC VARIABLES
# =============================================================================

# Production deployment information
# RAG_DEPLOYMENT_VERSION=v1.0.0
# RAG_BUILD_TIMESTAMP=2024-01-01T00:00:00Z

# Auto-scaling settings (if using container orchestration)
# RAG_AUTOSCALING_MIN_REPLICAS=2
# RAG_AUTOSCALING_MAX_REPLICAS=10

# =============================================================================
# FEATURE FLAGS (Override via Environment)
# =============================================================================

# Enable/disable features via environment variables
# RAG_FEATURES_STREAMING_RESPONSES=true
# RAG_FEATURES_KNOWLEDGE_GRAPH_ENABLED=false
# RAG_FEATURES_AB_TESTING_ENABLED=true

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Slack integration
# RAG_SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
# RAG_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord integration
# RAG_DISCORD_BOT_TOKEN=your_discord_bot_token

# Microsoft Teams integration
# RAG_TEAMS_WEBHOOK_URL=https://your-tenant.webhook.office.com/webhook

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level override
# RAG_LOGGING_LEVEL=INFO

# Log file paths
# RAG_LOGGING_ERROR_LOG_FILE=/var/log/rag/error.log
# RAG_LOGGING_ACCESS_LOG_FILE=/var/log/rag/access.log
# RAG_LOGGING_AUDIT_LOG_FILE=/var/log/rag/audit.log

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test-specific overrides (only used in testing environment)
# RAG_TESTING_MOCK_LLM=true
# RAG_TESTING_MOCK_EMBEDDINGS=true
# RAG_TESTING_FAST_MODE=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Performance-related overrides
# RAG_PERFORMANCE_BATCH_SIZE=64
# RAG_PERFORMANCE_MAX_WORKERS=8
# RAG_PERFORMANCE_USE_GPU=false

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================

# Experimental features (use with caution)
# RAG_EXPERIMENTAL_ADVANCED_CHUNKING=false
# RAG_EXPERIMENTAL_QUANTUM_EMBEDDINGS=false
# RAG_EXPERIMENTAL_NEURAL_RERANKING=false